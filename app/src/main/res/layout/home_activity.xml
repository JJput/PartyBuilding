<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <!--横滚图片-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">


        <com.jj.app.dangjian.custom.CustomViewPager
            android:id="@+id/home_head_cvp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/home_head_images_tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_30"
            android:layout_alignParentBottom="true"
            android:background="#BB000000"
            android:gravity="center|left"
            android:paddingLeft="@dimen/qb_px_30"
            android:paddingRight="@dimen/qb_px_30"
            android:singleLine="true"
            android:text="获取失败"
            android:textColor="@color/white"
            android:textSize="@dimen/qb_px_12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_30"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/qb_px_5"
            android:gravity="right|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_head_images_tv_thispage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/qb_px_13"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#9a9a9a"
                android:textSize="@dimen/qb_px_9"/>

            <TextView
                android:id="@+id/home_head_images_tv_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#9a9a9a"
                android:textSize="@dimen/qb_px_10"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_4"
        android:background="@color/color_FFe9e6e6"/>

    <!--党建动态-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.22"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_5"
                android:layout_marginRight="@dimen/qb_px_5"
                android:layout_marginTop="@dimen/qb_px_5"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_15"
                        android:orientation="vertical">

                        <TextView
                            style="@style/HomeTvTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="党建动态"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_marginTop="@dimen/qb_px_2"
                            android:background="@color/colorTitle"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/home_tv_trends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/qb_px_10"
                        android:text="更多"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/qb_px_8"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_FFe9e6e6"/>

            </LinearLayout>

            <ListView
                android:id="@+id/home_lv_trends"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/qb_px_10"
                android:layout_marginLeft="@dimen/qb_px_15"
                android:layout_marginTop="@dimen/qb_px_10"
                android:divider="@null"
                />
        </LinearLayout>


        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_FFe9e6e6"/>

        <!--政策文件-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/qb_px_5"
                android:layout_marginRight="@dimen/qb_px_5"
                android:layout_marginTop="@dimen/qb_px_5"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_15"
                        android:orientation="vertical">

                        <TextView
                            style="@style/HomeTvTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="政策文件"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_marginTop="@dimen/qb_px_2"
                            android:background="@color/colorTitle"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/home_tv_zfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/qb_px_10"
                        android:text="更多"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/qb_px_8"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_FFe9e6e6"/>

            </LinearLayout>

            <ListView
                android:id="@+id/home_lv_zfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/qb_px_10"
                android:layout_marginLeft="@dimen/qb_px_15"
                android:layout_marginTop="@dimen/qb_px_10"
                android:divider="@null"
                />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_4"
        android:background="@color/color_FFe9e6e6"/>

    <!--基层党建-->
    <!--基层党建-->
    <!--基层党建-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.22"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_5"
            android:layout_marginRight="@dimen/qb_px_5"
            android:layout_marginTop="@dimen/qb_px_5"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_15"
                    android:orientation="vertical">

                    <TextView
                        style="@style/HomeTvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基层党建"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:layout_marginTop="@dimen/qb_px_2"
                        android:background="@color/colorTitle"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/home_tv_grass_roots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/qb_px_10"
                    android:text="更多"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/qb_px_8"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_FFe9e6e6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--基层党建 左图-->
            <ImageView
                android:id="@+id/home_iv_grass_roots"
                android:layout_width="0dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/qb_px_10"
                android:layout_marginTop="@dimen/qb_px_10"
                android:layout_marginBottom="@dimen/qb_px_10"
                android:layout_weight="2">

            </ImageView>


            <!--基层党建 右文字-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <ListView
                    android:id="@+id/home_lv_grass_roots"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/qb_px_10"
                    android:layout_marginLeft="@dimen/qb_px_15"
                    android:layout_marginTop="@dimen/qb_px_10"
                    android:divider="@null"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_4"
        android:background="@color/color_FFe9e6e6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_5"
            android:layout_marginRight="@dimen/qb_px_5"
            android:layout_marginTop="@dimen/qb_px_5"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_15"
                    android:orientation="vertical">

                    <TextView
                        style="@style/HomeTvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="党建期刊"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:layout_marginTop="@dimen/qb_px_2"
                        android:background="@color/colorTitle"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/home_tv_per_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/qb_px_10"
                    android:text="更多"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/qb_px_8"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_FFe9e6e6"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <HorizontalScrollView
                android:id="@+id/home_hsv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/qb_px_15"
                android:layout_marginRight="@dimen/qb_px_15"
                android:layout_marginTop="@dimen/qb_px_5"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <GridView
                        android:id="@+id/home_gv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:numColumns="4"
                        android:scrollbars="none"/>
                </LinearLayout>

            </HorizontalScrollView>

            <ImageButton
                android:id="@+id/home_ib_right"
                android:layout_width="@dimen/qb_px_20"
                android:layout_height="@dimen/qb_px_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/color_FFeeeeee"
                android:scaleType="centerInside"
                android:src="@drawable/ic_right"/>

            <ImageButton
                android:id="@+id/home_ib_left"
                android:layout_width="@dimen/qb_px_20"
                android:layout_height="@dimen/qb_px_40"
                android:layout_centerVertical="true"
                android:background="@color/color_FFeeeeee"
                android:scaleType="centerInside"
                android:src="@drawable/ic_left"/>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>